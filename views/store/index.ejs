<%- include('../partials/head') %>
</head>

<body>
  <%- include('../partials/nav') %>
  <main class="flex flex-col items-center mx-auto">
    
    <!-- Search bar section -->
    <div class="w-full max-w-3xl px-4 mb-8">
      <div class="bg-white p-6 rounded-2xl shadow-xl">
        <h3 class="text-2xl font-bold text-center mb-4 bg-gradient-to-r from-red-600 to-red-400 bg-clip-text text-transparent">
          Find Your Perfect Stay
        </h3>
        <form action="/" method="GET" class="relative">
          <div class="relative flex items-center gap-3">
            <div class="relative flex-grow">
              <div class="absolute left-4 top-1/2 -translate-y-1/2 text-gray-400">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                </svg>
              </div>
              <input 
                type="text" 
                name="q" 
                placeholder="Search by location or property name..."
                value="<%= typeof query !== 'undefined' ? query : '' %>"
                class="w-full pl-12 pr-4 py-3 rounded-xl border-2 border-gray-100 focus:border-red-400 focus:ring-2 focus:ring-red-100 focus:outline-none transition-all duration-300 text-base shadow-sm hover:shadow-md"
              >
            </div>
            <button 
              type="submit" 
              class="h-11 w-11 flex items-center justify-center bg-gradient-to-r from-red-600 to-red-500 text-white rounded-full hover:shadow-lg hover:scale-105 focus:outline-none focus:ring-2 focus:ring-red-200 transition-all duration-300">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
              </svg>
            </button>
          </div>
        </form>
      </div>
    </div>

    <h3 class="text-xl text-gray-700 font-medium text-center mb-8">Discover Amazing Places to Stay</h3>

    <!-- homes list -->
    <% if (homes.length > 0) { %>
      <ul class="flex flex-wrap gap-6 w-full ml-12">
        <% homes.forEach(home => { %>
          <li
            class="rounded-2xl shadow-lg border-2 border-transparent hover:border-red-600 transition-colors flex flex-col items-center max-w-xs w-full">
            <a href="/homes/<%= home._id %>" class="block w-full h-full">
              <% if (home.photo) { %>
                <img 
                  src="/uploads/<%= home.photo %>" 
                  alt="Home photo"
                  class="mb-4 rounded-xl w-full max-h-48 object-cover" 
                />
              <% } %>
              <div class="p-4">
                <h2 class="text-xl font-semibold mb-1 text-center">
                  <%= home.homeName %>
                </h2>
                <p class="text-gray-700 text-center">Location: <%= home.location %></p>
                <p class="text-gray-700 text-center">Price per night: â‚¹<%= home.price %></p>
                <p class="text-gray-700 text-center">Rating: <%= home.rating %> / 5</p>
              </div>
            </a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>

      <% if (query && query.trim().length > 0) { %>
        <p class="text-gray-600 text-center text-4xl mt-6">
          No homes found matching <span class="text-red-400 text-5xl">"<%= query %>"</span> 
        </p>
      <% } else { %>
        <p class="text-gray-600 text-center mt-6">
          No homes available yet.
        </p>
      <% } %>
    <% } %>
  </main>
</body>
</html>
