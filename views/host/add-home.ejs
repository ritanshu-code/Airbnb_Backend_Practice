<%- include('../partials/head') %>
<body>
    <%- include('../partials/nav') %>
    <main class="flex flex-col items-center justify-center gap-8 bg-gray-100 p-8 max-w-md mx-auto rounded-2xl shadow-lg">
        <h1 class="text-3xl text-center font-bold mb-">Register your home on Airbnb!</h1>
        <form action="/host/add-home" method="POST" class="w-full" enctype="multipart/form-data">
            <div class="flex flex-col gap-6 w-full">
                    
                    <input class="p-2 border-2 border-gray-300 focus:border-red-500 rounded-2xl w-full" type="text" placeholder="Enter your Home name" id="homeName" name="homeName" required>
                    
                    <input class="p-2 border-2 border-gray-300 focus:border-red-500 rounded-2xl w-full" type="text" placeholder="Enter your location" id="location" name="location" required>
                    
                    <input class="p-2 border-2 border-gray-300 focus:border-red-500 rounded-2xl w-full" type="number" min="0" step="0.01" placeholder="Enter price per night" id="price" name="price" required>

                    
                    <input class="p-2 border-2 border-gray-300 focus:border-red-500 rounded-2xl w-full" type="number" min="0" max="5" step="0.1" placeholder="Enter rating (0-5)" id="rating" name="rating" required>

                    <input class="p-2 border-2 border-gray-300 focus:border-red-500 rounded-2xl w-full" type="text" placeholder="Add description" id="description" name="description" required>

                    <input class="p-2 border-2 border-gray-300 focus:border-red-500 rounded-2xl w-full" type="file" id="photo" name="photo" accept="image/*" required>

                    
                    <button class="w-full bg-red-200 p-2 border-2 border-red-200 rounded-2xl transition-all duration-200 hover:bg-red-600 hover:text-white hover:border-red-700 font-semibold" type="submit">Submit</button>
                </div>
            </div>
        </form>
    </main>
</body>
</html>