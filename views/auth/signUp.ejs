<%- include('../partials/head') %>

    <body class="bg-gray-50">
        <%- include('../partials/nav') %>

            <main class="min-h-[calc(100vh-64px)] overflow-y-auto py-8 px-4">
                <div class="max-w-5xl mx-auto">
                    <div class="flex flex-col md:flex-row md:items-start md:gap-8 md:justify-center">

                        <!-- Signup Form -->
                        <div
                            class="w-full md:w-[480px] bg-white p-8 rounded-2xl shadow-lg border border-gray-100 <% if (!errorMessage || errorMessage.length === 0) { %>md:mx-auto<% } %>">
                            <div class="text-center mb-8">
                                <h1 class="text-3xl font-bold text-gray-900">Sign up on Airbnb!</h1>
                                <p class="mt-2 text-gray-600">Create an account to get started</p>
                            </div>

                            <form action="/signup" method="POST" class="space-y-6">
                                <div class="space-y-4">

                                    <!-- Error message for mobile -->
                                    <div class="md:hidden">
                                        <%- include('../partials/errors', { errors: errorMessage }) %>
                                    </div>

                                    <!-- Personal Information -->
                                    <div class="space-y-4">
                                        <div class="flex gap-4">
                                            <div class="flex-1">
                                                <label for="firstName"
                                                    class="block text-sm font-medium text-gray-700 mb-1">
                                                    First Name
                                                </label>
                                                <input
                                                    class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                                                    type="text" id="firstName" name="firstName"
                                                    value="<%= oldInput.firstName ? oldInput.firstName : '' %>"
                                                    placeholder="John" required>
                                            </div>

                                            <div class="flex-1">
                                                <label for="lastName"
                                                    class="block text-sm font-medium text-gray-700 mb-1">
                                                    Last Name
                                                </label>
                                                <input
                                                    class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                                                    type="text" id="lastName" name="lastName"
                                                    value="<%= oldInput.lastName ? oldInput.lastName : '' %>"
                                                    placeholder="Doe">
                                            </div>
                                        </div>

                                        <div>
                                            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                                                Email address
                                            </label>
                                            <input
                                                class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                                                type="email" id="email" name="email"
                                                value="<%= oldInput.email ? oldInput.email : '' %>"
                                                placeholder="you@example.com" required>
                                        </div>
                                    </div>

                                    <!-- Password Section -->
                                    <div class="space-y-4">
                                        <div>
                                            <label for="password" class="block text-sm font-medium text-gray-700 mb-1">
                                                Password
                                            </label>
                                            <input
                                                class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                                                type="password" id="password" name="password" placeholder="••••••••"
                                                required>
                                        </div>

                                        <div>
                                            <label for="confirmPassword"
                                                class="block text-sm font-medium text-gray-700 mb-1">
                                                Confirm Password
                                            </label>
                                            <input
                                                class="w-full px-4 py-2 border border-gray-300 rounded-xl focus:ring-2 focus:ring-red-500 focus:border-red-500 transition-colors"
                                                type="password" id="confirmPassword" name="confirmPassword"
                                                placeholder="••••••••" required>
                                        </div>
                                    </div>

                                    <!-- User Type Selection -->
                                    <div class="bg-gray-50 p-4 rounded-xl">
                                        <label class="block text-sm font-medium text-gray-700 mb-3">Sign up as:</label>
                                        <div class="flex gap-6">
                                            <label class="flex items-center gap-2 cursor-pointer">
                                                <input type="radio" name="userType" value="guest" id="guest" required
                                                    class="w-4 h-4 text-red-500 focus:ring-red-500 border-gray-300"
                                                    <%=oldInput.userType==="guest" ? "checked" : "" %>>
                                                <span class="text-gray-700">Guest</span>
                                            </label>

                                            <label class="flex items-center gap-2 cursor-pointer">
                                                <input type="radio" name="userType" value="host" id="host" required
                                                    class="w-4 h-4 text-red-500 focus:ring-red-500 border-gray-300"
                                                    <%=oldInput.userType==="host" ? "checked" : "" %>>
                                                <span class="text-gray-700">Host</span>
                                            </label>
                                        </div>
                                    </div>

                                    <!-- Terms and Conditions -->
                                    <div class="flex items-center gap-3">
                                        <input type="checkbox" name="terms" id="terms" required
                                            class="w-4 h-4 text-red-500 focus:ring-red-500 border-gray-300 rounded">
                                        <label for="terms" class="text-sm text-gray-600">
                                            I agree to the
                                            <a href="#" class="text-red-500 hover:text-red-600">Terms and Conditions</a>
                                        </label>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <button type="submit"
                                    class="w-full bg-red-500 text-white py-3 px-4 rounded-xl font-semibold hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors">
                                    Create Account
                                </button>

                                <!-- Sign In Link -->
                                <p class="text-center text-sm text-gray-600 mt-4">
                                    Already have an account?
                                    <a href="/login" class="text-red-500 hover:text-red-600 font-medium">Sign in</a>
                                </p>
                            </form>
                        </div>

                        <!-- Error message for desktop -->
                        <% if (errorMessage && errorMessage.length> 0) { %>
                            <div class="hidden md:block md:w-[400px]">
                                <div class="sticky top-8">
                                    <%- include('../partials/errors', { errors: errorMessage }) %>
                                </div>
                            </div>
                            <% } %>

                    </div>
                </div>
            </main>
    </body>

    </html>