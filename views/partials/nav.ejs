<header class="bg-white shadow-md mb-8 fixed w-full top-0 z-50">
    <nav class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
            <!-- Logo -->
            <a href="/" class="text-2xl font-bold text-red-600 font-[Montserrat]" style="font-family: 'Montserrat', sans-serif">
                airbnb
            </a>

            <!-- Mobile menu button -->
            <button id="mobile-menu-button" class="lg:hidden p-2 rounded-full hover:bg-gray-100 transition-colors">
                <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
                </svg>
            </button>

            <!-- Navigation links - desktop -->
            <div class="hidden lg:flex items-center space-x-3">
                <% if (isLoggedIn) { %>
                    <% if (user && user.userType === 'guest') { %>
                        <a href="/homes" class="px-5 py-2 rounded-full font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-300">
                            Home List
                        </a>
                        <a href="/bookings" class="px-5 py-2 rounded-full font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-300">
                            Bookings
                        </a>
                        <a href="/favourite" class="px-5 py-2 rounded-full font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-300">
                            Favourites
                        </a>
                    <% } else { %>
                        <a href="/host/host-home-list" class="px-5 py-2 rounded-full font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-300">
                            Host Homes
                        </a>
                        <a href="/host/add-home" class="px-5 py-2 rounded-full font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-300">
                            Add Home
                        </a>
                    <% } %>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="bg-red-600 text-white px-5 py-2 rounded-full hover:bg-red-700 transition-colors duration-300">
                            Logout
                        </button>
                    </form>
                <% } else { %>
                    <a href="/login" class="px-5 py-2 rounded-full font-medium text-gray-700 hover:bg-gray-100 transition-colors duration-300">
                        Login
                    </a>
                    <a href="/signup" class="bg-red-600 text-white px-5 py-2 rounded-full hover:bg-red-700 transition-colors duration-300">
                        Sign Up
                    </a>
                <% } %>
            </div>
        </div>

        <!-- Mobile menu -->
        <div id="mobile-menu" class="lg:hidden hidden pt-4 pb-3">
            <div class="flex flex-col space-y-2">
                <% if (isLoggedIn) { %>
                    <% if (user && user.userType === 'guest') { %>
                        <a href="/homes" class="block px-4 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300">
                            Home List
                        </a>
                        <a href="/bookings" class="block px-4 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300">
                            Bookings
                        </a>
                        <a href="/favourite" class="block px-4 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300">
                            Favourites
                        </a>
                    <% } else { %>
                        <a href="/host/host-home-list" class="block px-4 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300">
                            Host Homes
                        </a>
                        <a href="/host/add-home" class="block px-4 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300">
                            Add Home
                        </a>
                    <% } %>
                    <form action="/logout" method="POST" class="inline">
                        <button type="submit" class="w-full text-left px-4 py-2 text-base font-medium text-red-600 hover:bg-gray-100 rounded-lg transition-colors duration-300">
                            Logout
                        </button>
                    </form>
                <% } else { %>
                    <a href="/login" class="block px-4 py-2 text-base font-medium text-gray-700 hover:bg-gray-100 rounded-lg transition-colors duration-300">
                        Login
                    </a>
                    <a href="/signup" class="block px-4 py-2 text-base font-medium text-red-600 hover:bg-gray-100 rounded-lg transition-colors duration-300">
                        Sign Up
                    </a>
                <% } %>
            </div>
        </div>
    </nav>

    <script>
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>
</header>

<!-- Spacer for fixed header -->
<div class="h-20"></div>