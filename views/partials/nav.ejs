<header class="px-8 py-3 bg-white rounded-full shadow-[0_4px_16px_rgba(0,0,0,0.12)] mb-8">
    <nav class="container mx-auto flex  ">
        <ul class="flex items-center justify-between w-full">
            <div>
                <li class=" font-bold text-red-600 text-xl">
                    <a href="/" class="font-[Montserrat]" style="font-family: 'Montserrat', sans-serif">airbnb</a>
                </li>
            </div>
            <div class="flex items-center justify-between gap-4">
                
                <% if (isLoggedIn) { %>
                    <% if ( user && user.userType === 'guest') { %>
                        <li class=" ">
                            <a href="/homes"
                                class="inline-block px-5 py-2 bg-gray-100 rounded-full font-bold border-2 border-transparent transition hover:border-red-600 text-black">Home
                                List</a>
                        </li>
                        <li class=" ">
                            <a href="/bookings"
                                class="inline-block px-5 py-2 bg-gray-100 rounded-full font-bold border-2 border-transparent transition hover:border-red-600 text-black">
                                Bookings</a>
                        </li>
                        <li class=" ">
                            <a href="/favourite"
                                class="inline-block px-5 py-2 bg-gray-100 rounded-full font-bold border-2 border-transparent transition hover:border-red-600 text-black">
                                Favourites</a>
                        </li>
                        <% } else { %>
                            <li class=" ">
                                <a href="/host/host-home-list"
                                    class="inline-block px-5 py-2 bg-gray-100 rounded-full font-bold border-2 border-transparent transition hover:border-red-600 text-black">Host
                                    Homes</a>
                            </li>
                            <li class=" ">
                                <a href="/host/add-home"
                                    class="inline-block px-5 py-2 bg-gray-100 rounded-full font-bold border-2 border-transparent transition hover:border-red-600 text-black ">Add
                                    Home</a>
                            </li>
                            <% } %>
                            <form action="/logout" method="POST">
                                                <button type="submit"
                                                    class="hover:bg-red-400 py-2 px-4 rounded-lg transition duration-300 border border-white flex items-center">
                                                    Logout
                                                </button>
                                            </form>
                        <% } %>
                                    <% if (!isLoggedIn) { %>
                                        <li class=" ">
                                            <a href="/login"
                                                class="bg-gray-100 hover:bg-red-400 px-5 py-2 rounded-full font-bold  transition duration-300">Login</a>
                                            <a href="/signup"
                                                class="bg-gray-100 hover:bg-red-400 px-5 py-2 rounded-full font-bold  transition duration-300">SignUp</a>

                                        </li>                                            
                                    <% } %>



            </div>
        </ul>
    </nav>
</header>